# Ruby Core Development Environment Configuration
# Copy this file to .env and fill in values
# IMPORTANT: Never commit .env files with real values to Git!

# =============================================================================
# Vault Configuration (ADR-0015)
# =============================================================================
# Vault server address
VAULT_ADDR=http://127.0.0.1:8200

# Vault dev mode root token
# WARNING: This is a secret! Do not commit real tokens.
# Generate your own dev token or use the default from compose.
VAULT_DEV_TOKEN=<your-dev-root-token>

# Token used by services to authenticate with Vault
# In dev mode, this is typically the same as VAULT_DEV_TOKEN
VAULT_TOKEN=<your-vault-token>

# =============================================================================
# NATS Configuration
# =============================================================================
# NATS server URL (with TLS)
NATS_URL=tls://localhost:4222

# Path to NATS CA certificate for TLS verification
NATS_CA_FILE=/path/to/ca.pem

# =============================================================================
# Service Configuration
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Environment name
ENVIRONMENT=development

# =============================================================================
# Clock Skew Tolerance (ADR-0026)
# =============================================================================
# Tolerance window in milliseconds for time-sensitive operations
CLOCK_SKEW_TOLERANCE_MS=1000
